<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Disable sandboxing for Developer ID apps -->
  <key>com.apple.security.app-sandbox</key>
  <false/>

  <!-- Allow reading and writing files chosen through open/save dialogs -->
  <key>com.apple.security.files.user-selected.read-write</key>
  <true/>

  <!-- Allow read/write access to Application Support and other local storage -->
  <key>com.apple.security.files.user-selected.read-only</key>
  <true/>
  <key>com.apple.security.files.downloads.read-write</key>
  <true/>

  <!-- Optional: access to all user files (only if needed) -->
  <!-- <key>com.apple.security.files.all</key>
  <true/> -->
</dict>
</plist>